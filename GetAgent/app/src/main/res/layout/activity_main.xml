<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agentIdTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent ID:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agentNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agentPhoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Phone:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agentEmailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agent Email:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/licenseCodeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LicenseCode:"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
