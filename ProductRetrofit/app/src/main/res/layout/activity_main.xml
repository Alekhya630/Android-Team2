<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/productIdEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ProductID"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/prodnameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Product_name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/proddescEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Product_Description"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/produinEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Product_UIN"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/insuredEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Insured_Interests"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/policycoverageEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Policy_Coverage"
            android:textStyle="bold" />

        <Button
            android:id="@+id/getBtn"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="GET" />

        <Button
            android:id="@+id/postBtn"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="POST" />

        <Button
            android:id="@+id/putBtn"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/put" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DELETE" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>